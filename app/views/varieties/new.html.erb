
<div class="container ">
    <div class="card col-md-4">
    <div class="card-header" >New Plant</div>
        <div class="row mx-auto m-3">
            <%= form_for @variety do |f| %>
                <div class="form-group">
                    <label>Name </label> 
                    <%= f.text_field :name, class: "form-control" %>
                </div>
                <div class="form-group">
                    <label>Container Type</label></br> 
                    <%= f.select 'container',  options_from_collection_for_select(@containers, 'id', 'name'), class: "form-control" %>
                </div>

                <div class="form-group">
                    <label>Price in Cents</label></br>
                    <%= f.text_field :price, class: "form-control" %>
                </div>
            <%= f.submit class: "btn btn-primary" %>
            <% end %>
        </div>
    </div>
</div>