<div class="container ">
    <div class="card col-md-4">
        <div class="card-header" >Move from Stage <%= @batch.stage %> to <%= @batch.next_stage %></div>
        <%= form_for @batch do |f| %>
            <%= f.hidden_field :stage, value: @batch.next_stage %>
                <div class="form-group">
                    <label>Dump</label> 
                    <%= f.text_field :quantity, name: 'dump', class: "form-control", value: '0' %>
                </div>
            <%= f.submit "Submit"%>
        <% end %>
        </div>
    </div>