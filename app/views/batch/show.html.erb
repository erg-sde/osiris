<h1>Batch <%= @batch.id%></h1>
<ul>
    <li>
        Variety: <%= link_to(@batch.variety.name, @batch.variety) %>
    </li>
    <li>
        Quantity: <%= @batch.quantity %>
    </li>
    <li>
        Plants: <%= @batch.plant_quantity %>
    </li>
    <li>
        Value: <%= number_to_currency(@batch.value) %>
    </li>
    <li>
        Location: <%= link_to(@batch.location.name, @batch.location) %>
    </li>
    <li>
        Planted By: <%= @batch.user.email %>
    </li>
    <li>
       Stage: <%= @batch.stage %>
    </li>
</ul>

<h3>Orders </h3>
<table class="table">
  <thead>
    <tr>
      <th scope="col">PO Number</th>
      <th scope="col">Variety</th>
      <th scope="col">Quantity Allocated</th>
    </tr>
  </thead>
  <tbody>
    <% @batch.line_item_batches.each do |lib| %>
        <tr>
        <td><%= link_to(lib.line_item.order.po_number, lib.line_item.order) %></td>
        <td><%= link_to(lib.line_item.variety.name, lib.line_item.variety)%></td>
        <td><%= lib.quantity %></td>
        </tr>
    <% end %>
  </tbody>
</table>