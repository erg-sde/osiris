<h4>Customers
  <%= link_to new_customer_path do %>
    <%= fa_icon 'plus-square', class: 'btn btn-success' %>
  <% end %>
</h4>
<table class="table table-striped border">
  <thead class="table-primary">
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Region</th>
      <th scope="col">Open Orders</th>
      <th scope="col">Open Value</th>
    </tr>
  </thead>
  <tbody>
    <% @customers.each do |customer| %>
        <tr>
            <td><%= link_to(customer.name, customer) %></td>
            <td><%= customer.region %></td>
            <td><%= customer.active_orders_count %></td>
            <td> <%= number_to_currency(customer.open_value / 100) %>
        </tr>
    <% end %>
  </tbody>
</table>

