<h3 class="mt-5">Line Items <%= link_to 'New Line Item', new_line_item_path(params: {order: @order}), class: "btn btn-primary"%></h3>
<table class="table table-striped">
  <thead class="table-success">
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Variety</th>
      <th scope="col">Ordered</th>
      <th scope="col">Ship Week</th>
      <th scope="col">Allocated</th>
      <th scope="col">Value</th>      
      <th scope="col">Status</th>
    </tr>
  </thead>
  <tbody>
    <% @line_items.each do |line| %>
        <tr>
          <td><%= link_to(line.id, line) %></td>
          <td><%= link_to(line.variety.name, line.variety) %></td>
          <td><%= line.quantity%></td>
          <td><%= line.ship_week%></td>
          <td><%= line.allocated %></td>
          <td><%= number_to_currency(line.value / 100) %></td>          
          <% if line.ready_to_ship? %>
            <td> <span class="badge badge-success">Ready</span> </td>
          <% else %>
            <td> <span class="badge badge-danger">Not Ready</span> </td>
          <% end %>
        </tr>
    <% end %>
  </tbody>
</table>
